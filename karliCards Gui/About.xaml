            <Button Content="_OK" Canvas.Right="12" Canvas.Bottom="10" Width="75" Click="Button_Click"/>
        </Canvas>
        <StackPanel Grid.Row="2">
            <Label Content="CardLib and Idea developed by Karil Watson" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="20,20,0,0" FontWeight="Bold" Foreground="#FF8B6F6F"/>
            <Label Content="Graphical User Interface develop by Jacob Hammer" HorizontalAlignment="Left" Padding="20,20,0,0" VerticalAlignment="Top" FontWeight="Bold" Foreground="#FF8B6F6F"/>
